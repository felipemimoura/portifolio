generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

//Criado tabelas
model Tecnologia {
  id        Int     @id @default(autoincrement())
  nome      String
  descricao String
  imagem    String
  destaque  Boolean @default(false)

  //Nome da tabela no banco
  @@map("tecnologias")
}

model Projeto {
  id          Int      @id @default(autoincrement())
  nome        String
  descricao   String
  tipo        String
  imagens     String[]
  nivel       Int
  repositorio String
  destaque    Boolean  @default(false)

  @@map("projetos")
}
